<% include header %>

  <div class="row">
    <div id="afficheur" class="col-lg-12" align="center">
      <div class="alert alert-warning">
        <%
          if (typeof user != 'undefined'){%>

            <p><%=user.error %></p>

            <%
          }
        %>
      </div>

      <!--
      <form class="" action="login" method="post">
